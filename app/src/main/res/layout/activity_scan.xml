<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="10dp"
    tools:context="com.bkbnurulfikri.tipolda.absensites.ScanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Hasil Scan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:id="@+id/textHasil"
            android:text="Hasil"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:id="@+id/textViewScan" />

        <Button
            android:id="@+id/btnSimpanData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rectangle_button"
            android:textColor="#fff"
            android:text="Klik untuk cek hasil scan"/>

        <Button
            android:id="@+id/btnLihatAbsensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle_button"
            android:textColor="#fff"
            android:text="Daftar Kehadiran Hari Ini"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rectangle_button"
            android:textColor="#fff"
            android:text="Logout"/>

        <ImageView
            android:id="@+id/imgScanKartu"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/scan"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnScanKartu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai Scan Kartu"
        android:background="@drawable/bg_rectangle_button"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnScanKartu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai Scan Kartu"
        android:background="@drawable/bg_rectangle_button2"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
